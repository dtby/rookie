<% content_for :title do %>
  用户注册
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 logo_bg">
      <div class="row text-center">
        <div class="col-xs-4 col-xs-offset-4"><%= image_tag "logo.png", class: "",width:"100%" %>
        </div>
        <div class="col-xs-12"><h2 class="title">菜鸟烩</h2></div>
      </div>
    </div>
  </div>
  <div class="row">
    <br>
    <br>
    <%= simple_form_for(@user, url: user_path(@user), html: { method: :patch }) do |f| %>
      <%= f.hidden_field :open_id, value: session[:openid] %>
      <% if @user.open_id.present? %>
        <div class="col-xs-12 input-btn">
          <%= link_to "您已经是烩员了", "#", class: "btn btn-blue btn-block text-center disabled" %>
        </div>
      <% else %>
        <div class="col-xs-12 input-btn">
          <%= f.submit "一键注册！", class: "btn btn-blue btn-block text-center" %>
        </div>  
      <% end -%>
    <% end %>
  </div>
</div>