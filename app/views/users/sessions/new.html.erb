<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 logo_bg">
      <div class="row text-center">
        <div class="col-xs-4 col-xs-offset-4"><%= image_tag "logo.png", class: "",width:"100%" %>
        </div>
        <div class="col-xs-12"><h2 class="title">菜鸟烩</h2></div>
      </div>
    </div>
  </div>
  <div class="row">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="col-xs-12 input-a">
        <%= f.text_field :login, autofocus: true, class: "form-control input-login", placeholder: "手机号码" %>
        <%#= f.input :email, required: false, autofocus: true, class:"form-control input-login", placeholder:"手机号码" %>
        <!-- <input type="text" class="form-control input-login" placeholder="手机号码"> -->
        <div class="input-group">
          <%= f.text_field :password, class: "form-control input-login", placeholder:"验证码" %>
          <!-- <input type="text" class="form-control input-login" placeholder="验证码"> -->
          <span class="input-group-btn ">
            <button class="btn btn-primary btn-login" type="button">获取验证码</button>
          </span>
        </div>
      </div>
      <div class="col-xs-12 input-a">
        <%= f.button :submit, "我要注册", class:"btn btn-primary btn-lg btn-block btn-login", data: { disable_with: '正在注册...' } %>
          <!-- <button class="btn btn-primary btn-lg btn-block btn-login" type="button">我要注册</button> -->
      </div>
    <% end %>
  </div>
</div>