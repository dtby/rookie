<% content_for :title do %>
  用户注册
<% end %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :admin_form) do |f| %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12 logo_bg">
        <div class="row text-center">
          <div class="col-xs-4 col-xs-offset-4"><%= image_tag "logo.png", class: "",width:"100%" %>
          </div>
          <div class="col-xs-12"><h2 class="title">菜鸟烩</h2></div>
        </div>
      </div>
    </div>
    <div class="row">

      <div class="col-xs-12 input-a">
        <%= f.input :phone, autofocus: true, class: "form-control input-login", placeholder: "手机号", label: false %>
        <div class="input-group clearfix" style="margin-bottom: 15px;">
          <%= f.input :message, wrapper: :inline_form , class: "form-control input-login", placeholder: "验证码", label: false %>
          <span class="input-group-btn ">
            <%= link_to("获取验证码", "javascript:void(0);" , class: "btn btn-primary btn-sms", id: "getSmsBtn") %>
          </span>
        </div>
        <%= f.input :password, required: true, class: "form-control input-login", label: false, placeholder: "输入密码（不少于6个字符）" %>
        <%= f.input :password_confirmation, required: true, class: "form-control input-login", placeholder: "密码确认", label: false %>
      </div>

      <div class="col-xs-12 input-btn">
        <%= f.button :submit, "注册", class: "btn btn-blue btn-block"%>
        <!-- <button class="btn btn-primary btn-lg btn-block btn-login" type="button">我要注册</button> -->
      </div>

      <div class="col-xs-12 input-btn">
        <%= link_to oauths_path(recurl: '/users/sessions/new') do %>
          <botton class="btn btn-default my-btn"><div class="text-left">&nbsp;&nbsp;我要报名</div></botton>
        <% end %> 
      </div>

    </div>
  </div>
<% end %>

<script type="text/javascript">
  $(function(){
    $("#getSmsBtn").click(function(){
      var reg = /^(0|86|17951)?(13[0-9]|15[012356789]|17[678]|18[0-9]|14[57])[0-9]{8}$/;
      if(!$("#user_phone").val().match(reg)){
        alert("请输入正确的手机号");
      }else{
        $.ajax({
          type: "POST",
          url: "<%= messages_path %>.js",
          data: "message[phone]=" + $("#user_phone").val()
        });
      }
    });
  });
</script>