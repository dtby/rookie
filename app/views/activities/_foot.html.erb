<div class="foot-tab col-xs-12 text-center">
  <div class="row">
    <div class="col-xs-4">
      <%= link_to my_activities_path do %>
        <%= image_tag("#{params[:action] == 'my' ? 'tab1_active.png' : 'tab1.png'}", width: 24) %>
        <p class="<%= 'active' if params[:action] == 'my' %>">我的任务</p>
      <% end %>
    </div>
    <div class="col-xs-4">
      <%= link_to official_activities_path do %>
        <%= image_tag("#{params[:action] == 'official' ? 'tab2_active.png' : 'tab2.png'}", width: 24) %>
        <p class="<%= 'active' if params[:action] == 'official' %>">官方活动</p>
      <% end %>
    </div>
    <div class="col-xs-4">
      <%= link_to else_activities_path do %>
        <%= image_tag("#{params[:action] == 'else' ? 'tab3_active.png' : 'tab3.png'}", width: 24) %>
        <p class="<%= 'active' if params[:action] == 'else' %>">其他活动</p>
      <% end %>
    </div>
  </div>
</div>