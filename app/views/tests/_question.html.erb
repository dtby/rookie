<div class="problem">
	<p class="text-justify"><%= question.problem %></p>
</div>
<div class="answer">
	<% [:a, :b, :c, :d, :e, :f].each do |option| %>
		<% answer = question.option.send(option) %>
		<% unless answer.nil? %>
			<p><%= option.to_s.upcase %>. <%= answer %></p>
		<% end %>
	<% end %>
</div>