<% if @question.kind == 'image' %>
	$(".image_form").empty();
	$(".image_form").html("<%= j( render partial: "image_form", locals: {question: @question} )%>");
<% else %>
	$(".modal-backdrop").remove();
	$("#testsModal").html("<%= escape_javascript( render partial: 'admin/share/modal', locals: { title: '编辑试题' } )%>");
	$("#global_modal .modal-body").html("<%= j( render partial: 'form', locals: {question: @question} )%>")
	$('#global_modal').modal('show');	
<% end %>