<div class="lg-box animated">
  <div class="row">
    <!-- 添加试题表单 -->
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>用户列表</h5>
          <div class="ibox-tools">
            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <!-- start列表 -->
            <table class="table table-striped table-condensed">
              <thead>
                <tr class="tests-table">
                  <th>序号</th>
                  <th>类别</th>
                  <th>级别</th>
                  <th>任务包等级</th> 
                  <% if ['boss', 'boss_gold', 'boss_diamond'].include? params[:role] %>
                    <th>发包数量</th>
                  <% elsif params[:role] == 'all' %>
                    <th>发包数量</th>
                    <th>涉及现金</th>
                    <th>接包数量/月</th>
                    <th>同时接包数量</th>
                  <% else %>
                    <th>涉及现金</th>
                    <th>接包数量/月</th>
                    <th>同时接包数量</th>
                  <% end %>
                  <th>操作</th> 
                </tr>
              </thead>
              <tbody>
                <%= render @permissions %>
              </tbody>
            </table>
            <h3 class="text-center"><%= paginate @permissions %></h3>
          </div><!-- end列表 -->
        </div>
      </div>
    </div>
  </div>
</div>
<div id="permissionsModal"></div>